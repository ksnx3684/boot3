<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ksnx3684.boot3.board.BoardMapper">
	<select id="getDetail" parameterType="BoardVO" resultType="BoardVO">
		SELECT * FROM BOARD WHERE NUM = #{num}
	</select>
	<select id="getList" resultType="BoardVO">
		SELECT * FROM BOARD ORDER BY NUM DESC
	</select>
	<insert id="setAdd" parameterType="BoardVO">
		INSERT INTO BOARD VALUES (NULL, 'TEST', 'TEST', 'TEST', 0, NOW(), 0, 0, 0, 1)
	</insert>
	<update id="setUpdate" parameterType="BoardVO">
		UPDATE BOARD SET TITLE = #{title}, CONTENTS = #{contents} WHERE NUM = #{num}
	</update>
	<delete id="setDelete" parameterType="BoardVO">
		DELETE FROM BOARD WHERE NUM = #{num}
	</delete>
</mapper>